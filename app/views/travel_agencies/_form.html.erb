<%# Shared form %>
<%= form_with model: @travel_agency, class: "space-y-6 max-w-xl mx-auto text-left" do |f| %>
  <% if @travel_agency.errors.any? %>
    <div class="alert alert-error">
      <strong><%= pluralize(@travel_agency.errors.count, "error") %> prevented saving:</strong>
      <ul class="mt-2 list-disc list-inside">
        <% @travel_agency.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input input-bordered w-full", autofocus: true %>
  </div>

  <div>
    <%= f.label :name_id, 'Name id', class: "label" %>
    <%= f.text_field :name_id, class: "input input-bordered w-full", autofocus: true %>
  </div>

  <div>
    <%= f.label :url, class: "label" %>
    <%= f.url_field :url, class: "input input-bordered w-full", placeholder: "https://example.com" %>
  </div>

  <div>
    <%= f.label :description, class: "label" %>
    <%= f.text_area :description, rows: 5, class: "textarea textarea-bordered w-full" %>
  </div>

  <div class="flex gap-3">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", (@travel_agency.persisted? ? @travel_agency : travel_agencies_path), class: "btn btn-ghost" %>
  </div>
<% end %>
