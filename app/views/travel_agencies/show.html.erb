<div class="w-full text-left max-w-3xl mx-auto space-y-6">
  <div class="flex justify-between items-start gap-4">
    <div>
      <h1 class="text-4xl font-bold mb-2"><%= @travel_agency.name %></h1>
      <p class="opacity-70 break-all"><%= link_to @travel_agency.url, @travel_agency.url, target: '_blank', rel: 'noopener' %></p>
    </div>
    <div class="flex gap-2 flex-wrap">
      <%= link_to "Search Offers", offers_current_path, class: "btn btn-sm btn-primary" %>
      <%= link_to "Edit", edit_travel_agency_path(@travel_agency), class: "btn btn-sm" %>
      <%= link_to "Back", travel_agencies_path, class: "btn btn-ghost btn-sm" %>
      <%= button_to "Delete", @travel_agency, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-error btn-sm" %>
    </div>
  </div>

  <div class="card bg-base-200 shadow">
    <div class="card-body space-y-2">
      <h2 class="card-title">Description</h2>
      <p><%= simple_format(@travel_agency.description.presence || '—') %></p>
    </div>
  </div>

  <div class="text-sm opacity-70">Created <%= time_ago_in_words(@travel_agency.created_at) %> ago • Updated <%= time_ago_in_words(@travel_agency.updated_at) %> ago</div>
</div>
